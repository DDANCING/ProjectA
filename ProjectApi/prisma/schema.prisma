generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  nome        String
  email       String
  senha       String
  desempenhos Desempenho[]
  scoreboards Scoreboard[]
}

model Musica {
  id          Int          @id @default(autoincrement())
  titulo      String
  artista     String
  linkYoutube String
  tablatura   String
  desempenhos Desempenho[]
  scoreboards Scoreboard[]
}

model Desempenho {
  id             Int    @id @default(autoincrement())
  usuario        User   @relation(fields: [usuarioId], references: [id])
  usuarioId      Int
  musica         Musica @relation(fields: [musicaId], references: [id])
  musicaId       Int
  pontuacaoIndiv Int
}

model Scoreboard {
  id             Int    @id @default(autoincrement())
  musica         Musica @relation(fields: [musicaId], references: [id])
  musicaId       Int
  mediaPontuacao Int
  User           User?  @relation(fields: [userId], references: [id])
  userId         Int?
}

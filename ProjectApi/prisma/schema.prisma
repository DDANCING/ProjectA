generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  nome  String
  email String @unique
  senha String

  desempenhos Desempenho[]
  scoreboards Scoreboard[]
}

model Musica {
  id            Int      @id @default(autoincrement())
  titulo        String
  artista       String
  linkYoutube   String
  tablatura     String
  capaAlbum     String
  tempoMinutos  Int
  tempoSegundos Int
  afinacao      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  desempenhos Desempenho[]
}

model Desempenho {
  id        Int      @id @default(autoincrement())
  usuarioId Int
  musicaId  Int
  pontuacao Int
  updatedAt DateTime @updatedAt

  usuario User   @relation(fields: [usuarioId], references: [id])
  musica  Musica @relation(fields: [musicaId], references: [id])

  @@unique([usuarioId, musicaId])
}

model Scoreboard {
  id             Int  @id @default(autoincrement())
  mediaPontuacao Int
  userId         Int? @unique

  User User? @relation(fields: [userId], references: [id])
}

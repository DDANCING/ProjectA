generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  nome        String
  email       String       @unique
  senha       String
  ban         Boolean      @default(false)
  desempenhos Desempenho[]
  Scoreboard  Scoreboard?
}

model Musica {
  id            Int          @id @default(autoincrement())
  titulo        String
  artista       String
  linkYoutube   String
  tablatura     String
  capaAlbum     String
  afinacao      String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  tempoMinutos  Int
  tempoSegundos Int
  desempenhos   Desempenho[]
}

model Desempenho {
  id        Int      @id @default(autoincrement())
  usuarioId Int
  musicaId  Int
  pontuacao Int
  updatedAt DateTime @updatedAt
  musica    Musica   @relation(fields: [musicaId], references: [id])
  usuario   User     @relation(fields: [usuarioId], references: [id])

  @@unique([usuarioId, musicaId])
}

model Scoreboard {
  id             Int   @id @default(autoincrement())
  mediaPontuacao Int
  usuarioId      Int?  @unique
  User           User? @relation(fields: [usuarioId], references: [id])
}

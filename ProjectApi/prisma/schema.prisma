generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  nome        String
  email       String
  senha       String
  desempenhos Desempenho[]
  scoreboards Scoreboard[]
}

model Musica {
  id          Int          @id @default(autoincrement())
  titulo      String
  artista     String
  linkYoutube String
  tablatura   String
  capaAlbum   String
  desempenhos Desempenho[]
}

model Desempenho {
  id             Int    @id @default(autoincrement())
  usuarioId      Int
  musicaId       Int
  pontuacaoIndiv Int
  musica         Musica @relation(fields: [musicaId], references: [id])
  usuario        User   @relation(fields: [usuarioId], references: [id])
}

model Scoreboard {
  id             Int   @id @default(autoincrement())
  mediaPontuacao Int
  userId         Int?
  User           User? @relation(fields: [userId], references: [id])
}
